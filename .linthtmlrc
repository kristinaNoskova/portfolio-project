{
  "extends": [
    "linthtml-config-htmlacademy"
  ],
  "rules": {
    "class-style": [
      true,
      "bem"
    ],
    "htmlacademy/aria-label-misuse": false,
    "htmlacademy/no-blocking-script": false,
    "htmlacademy/req-single-styles": false,
    "htmlacademy/req-stylesheet-link": false,
    "htmlacademy/req-preload-font": false,
    "htmlacademy/attr-req-value": [
      true,
      {
        "ignore": [
          "alt",
          "data-form-validate",
          "data-required",
          "data-on-input-validate"
        ]
      }
    ]
  }
}
